@page
@model E_commerce_store_new_.LoginModel


<!DOCTYPE html>
<html>

<style>

	.login {
		width: 400px;
		margin: 100px auto;
		padding: 20px;
		background-color: #f5f5f5;
		border-radius: 5px;
		box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
		text-align: center;
		background-image: url("sky2.jfif");
	}

		.login h1 {
			font-size: 36px;
			margin-bottom: 30px;
			color: #333;
		}

		.login form {
			text-align: left;
		}

		.login label {
			display: block;
			font-size: 18px;
			margin-bottom: 10px;
			color: #333;
		}

		.login select, .login input[type="text"], .login input[type="password"], .login input[type="submit"] {
			width: 100%;
			padding: 10px;
			font-size: 18px;
			border-radius: 5px;
			border: none;
			margin-bottom: 20px;
		}

		.login select {
			background-color: #fff;
		}

		.login input[type="submit"] {
			background-color: #333;
			color: #fff;
			cursor: pointer;
		}

			.login input[type="submit"]:hover {
				background-color: #555;
			}

	body {
		background-color: rgb(94, 124, 165);
	}
</style>
<head>
	<title>Login Form</title>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
	<div class="login">
		<h1>Login Form</h1>
		<form method="post">
			<label for="role">I am a:</label>
			<select name="role" id="role">
				<option value="seller">Seller</option>
				<option value="buyer">Buyer</option>
			</select>
			<label for="username">Username:</label>
			<input type="text" name="username" placeholder="Enter Username" required>
			<label for="password">Password:</label>
			<input type="password" name="password" placeholder="Enter Password" required>
			<input type="submit" value="Login" asp-page-handler="OnPost">
			
		</form>
		<p>Don't have an account? <a href="/suu">Sign Up</a></p>
	</div>
</body>
</html>